<Window
    x:Class="TonNamespace.EffectuerRetourWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Faire un retour"
    Width="800"
    Height="600"
    Background="White">

    <Grid Margin="20">
        <!--  Bandeau rouge en haut  -->
        <Border
            Height="50"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Background="Red" />
        <Button
            Width="40"
            Height="40"
            Margin="10,5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="←"
            FontSize="20" />

        <TextBlock
            Margin="60,10,0,0"
            VerticalAlignment="Top"
            FontSize="18"
            FontWeight="Bold"
            Text="Faire un retour" />

        <!--  Contenu principal  -->
        <Grid Margin="0,70,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!--  Partie gauche avec infos matériel  -->
            <StackPanel
                Grid.Column="0"
                Margin="0,0,20,0"
                VerticalAlignment="Top">
                <TextBlock Margin="0,0,0,10" FontSize="16"><Run Text="MATERIEL : " /><Run Language="fr-fr" Text="[nom]" /></TextBlock>
                <TextBlock Margin="0,0,0,5"><Run Text="DU : " /><Run Language="fr-fr" Text="[date]" /></TextBlock>
                <TextBlock Margin="0,0,0,5"><Run Text="AU : " /><Run Language="fr-fr" Text="[date]" /></TextBlock>
                <TextBlock Margin="0,0,0,10"><Run Text="Lieu : " /><Run Language="fr-fr" Text="[Lieu]" /></TextBlock>

                <Image
                    Width="200"
                    Height="150"
                    Margin="0,0,0,10"
                    Source="Images/marteau.png"
                    Stretch="Uniform">
                    <Image.OpacityMask>
                        <ImageBrush ImageSource="/marteau piqueur endommagé.jpg" />
                    </Image.OpacityMask>
                </Image>
            </StackPanel>

            <!--  Partie droite avec les RadioButtons  -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <GroupBox
                    Margin="0,20,0,20"
                    FontSize="20"
                    Header="Matériel rendu :">
                    <StackPanel>
                        <RadioButton
                            Margin="5"
                            Content="Oui"
                            GroupName="Rendu" />
                        <RadioButton
                            Margin="5"
                            Content="Non"
                            GroupName="Rendu" />
                    </StackPanel>
                </GroupBox>

                <GroupBox
                    Margin="0,10,0,20"
                    FontSize="20"
                    Header="Matériel rendu :">
                    <StackPanel>
                        <RadioButton
                            Margin="5"
                            Content="Bon"
                            GroupName="Etat" />
                        <RadioButton
                            Margin="5"
                            Content="Endommagé"
                            GroupName="Etat" />
                        <RadioButton
                            Margin="5"
                            Content="Hors service"
                            GroupName="Etat" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <Button
                Grid.Column="1"
                Margin="130,389,76,45"
                Background="Red"
                Content="ENREGISTRER RETOUR"
                FontWeight="Bold"
                Foreground="White" />
            <Button Margin="82,314,102,130" Content="Rep en cours" />
        </Grid>
    </Grid>
</Window>
