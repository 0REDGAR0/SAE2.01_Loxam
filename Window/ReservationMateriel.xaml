<Window x:Class="SAE2._01_Loxam.ReservationMateriel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LOXAM - Réserver un matériel" Height="900" Width="1400" Background="White">

    <Grid>

        <!-- Bandeau rouge en haut -->
        <Grid Height="100" VerticalAlignment="Top" Background="Red">
            <Label Content="LOXAM" FontSize="36" FontWeight="Bold" Foreground="White" Margin="20,20,0,0" HorizontalAlignment="Left"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="RETOUR" Foreground="White" FontSize="22" Margin="40,0"/>
                <TextBlock Text="RESERVATION" Foreground="White" FontSize="22" FontWeight="Bold" Margin="40,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0" VerticalAlignment="Center">
                <TextBlock Text="Christophe Colin " Foreground="White" FontSize="16" VerticalAlignment="Center"/>
                <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Menu vertical gauche -->
        <StackPanel Width="200" Background="#F0F0F0" Margin="0,100,0,0" HorizontalAlignment="Left">
            <Button Content="🔍 Recherche matériel" Margin="10" Height="50" FontSize="16"/>
            <Button Content="👤 Fiche client" Margin="10" Height="50" FontSize="16"/>
            <Button Content="🔧 Réparation" Margin="10" Height="50" FontSize="16"/>
        </StackPanel>

        <!-- Contenu principal -->
        <StackPanel Margin="220,120,20,20">

            <!-- Titre + bouton retour -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                <Button Content="⬅" Width="50" Height="50" FontSize="20" Margin="0,0,10,0"/>
                <TextBlock Text="Réserver un matériel" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>

            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="10" Padding="20">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Partie gauche -->
                    <StackPanel Grid.Column="0" Margin="10">

                        <TextBlock Text="{Binding Materiel}" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="10" Padding="5" Margin="0,0,0,10">
                            <Image Source="{Binding ImageMateriel}" Height="250" Stretch="Uniform"/>
                        </Border>

                        <TextBlock>
                            <Run Text="Réf. " FontSize="16"/>
                            <Run Text="{Binding Reference}" Foreground="Red" FontSize="16" FontWeight="Bold"/>
                        </TextBlock>

                        <TextBlock Text="Tarif : {Binding Tarif}/jour" FontSize="16" Margin="0,5,0,0"/>

                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="10" Padding="10" Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Total estimé : " FontSize="20" FontWeight="Bold"/>
                                <TextBlock Text="{Binding TotalEstime}" FontSize="20" Foreground="Red" FontWeight="Bold" Margin="10,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Partie droite -->
                    <StackPanel Grid.Column="1" Margin="20">

                        <Button Content="Supprimer la réservation" HorizontalAlignment="Right" Margin="0,0,0,10"/>

                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Date début : {Binding DateDebut}" FontSize="16"/>
                                <TextBlock Text="Date fin : {Binding DateFin}" FontSize="16" Margin="0,5,0,0"/>
                                <TextBlock Text="Durée : {Binding Duree} jours" FontSize="16" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="10" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Options :" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                                <CheckBox Content="Assurance dégâts" IsChecked="{Binding AssuranceDegats}" FontSize="14" Margin="0,5"/>
                                <CheckBox Content="Livraison sur site" IsChecked="{Binding LivraisonSite}" FontSize="14" Margin="0,5"/>
                                <CheckBox Content="Réservation anticipée" IsChecked="{Binding ReservationAnticipee}" FontSize="14" Margin="0,5"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Bouton final réserver -->
            <Button Content="RÉSERVER LE MATÉRIEL"
                    Background="Red" Foreground="White" FontWeight="Bold"
                    Height="60" Width="300" FontSize="16"
                    HorizontalAlignment="Right" Margin="0,20,0,0"/>
        </StackPanel>

    </Grid>
</Window>
