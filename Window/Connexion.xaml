<Window
    x:Class="SAE2._01_Loxam.Connexion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Connexion"
    Width="800"
    Height="450"
    Background="#f2f2f2"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <!--  Zone rouge centrale  -->
        <Border
            Width="800"
            Height="434"
            Padding="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#E30613">
            <StackPanel Width="350" HorizontalAlignment="Center">
                <!--  Logo  -->
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="LOXAM" />
                <TextBlock
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Foreground="White"
                    Text="Bienvenue sur Loxam" />

                <!--  Formulaire  -->
                <Border
                    Height="262"
                    Padding="20"
                    Background="White"
                    CornerRadius="4">
                    <StackPanel>
                        <TextBlock Margin="0,0,0,5" Text="Identifiant ou adresse e-mail                   Login: beduneye" />
                        <TextBox
                            x:Name="txtLogin"
                            Height="30"
                            FontSize="18" />

                        <TextBlock Margin="0,10,0,5" Text="Mot de passe                                               MDP: WVTvXG" />
                        <PasswordBox
                            x:Name="txtPassword"
                            Height="30"
                            FontSize="18" />

                        <ComboBox
                            x:Name="cmbServeur"
                            Height="25"
                            Margin="0,10,0,0"
                            SelectedIndex="0">
                            <ComboBoxItem Content="Serveur IUT (srv-peda-new)" />
                            <ComboBoxItem Content="Serveur LOCAL (192.168.1.32)" />
                        </ComboBox>

                        <TextBlock
                            Margin="0,10,0,5"
                            FontSize="12"
                            Foreground="Gray"
                            Text="Mot de passe oublié ?" />
                        <StackPanel Orientation="Horizontal">
                            <Button
                                x:Name="butFlemme"
                                Margin="0,5,125,0"
                                Padding="10,5"
                                Background="#F9DAD8"
                                BorderBrush="#C8B6B4"
                                Click="butFlemme_Click"
                                Content="Flemme"
                                FontWeight="SemiBold"
                                Foreground="Black"
                                IsDefault="True" />

                            <Button
                                x:Name="butValider"
                                Width="120"
                                Margin="0,5,0,0"
                                Padding="10,5"
                                HorizontalAlignment="Right"
                                Background="#F9DAD8"
                                BorderBrush="#C8B6B4"
                                Click="butValider_Click"
                                Content="Se connecter"
                                FontWeight="SemiBold"
                                Foreground="Black"
                                IsDefault="True" />
                        </StackPanel>

                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>


