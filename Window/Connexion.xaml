<Window
    x:Class="SAE2._01_Loxam.Connexion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Connexion"
    Width="800"
    Height="450"
    Background="#f2f2f2"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <!--  Zone rouge centrale  -->
        <Border
            Width="800"
            Height="434"
            Padding="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#E30613">
            <StackPanel Width="350" HorizontalAlignment="Center">
                <!--  Logo  -->
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="LOXAM" />
                <TextBlock
                    Margin="0,10,0,30"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Foreground="White"
                    Text="Bienvenue sur Loxam" />

                <!--  Formulaire  -->
                <Border
                    Padding="20"
                    Background="White"
                    CornerRadius="4">
                    <StackPanel>
                        <TextBlock Margin="0,0,0,5" Text="Identifiant ou adresse e-mail" />
                        <TextBox x:Name="txtLogin" Height="30" />

                        <TextBlock Margin="0,10,0,5" Text="Mot de passe" />
                        <TextBox x:Name="txtPassword" Height="30" />

                        <TextBlock
                            Margin="0,10,0,5"
                            FontSize="12"
                            Foreground="Gray"
                            Text="Mot de passe oublié ?" />

                        <Button
                            x:Name="bt_Valider"
                            Width="120"
                            Margin="0,10,0,0"
                            Padding="10,5"
                            HorizontalAlignment="Right"
                            Background="#F9DAD8"
                            BorderBrush="#C8B6B4"
                            Click="Button_Click"
                            Content="Se connecter"
                            FontWeight="SemiBold"
                            Foreground="Black" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>


