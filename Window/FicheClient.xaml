<Window x:Class="SAE2._01_Loxam.FicheClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LOXAM - Fiche client" Height="900" Width="1400" Background="White">

    <Grid>

        <!-- Bandeau rouge en haut -->
        <Grid Height="100" VerticalAlignment="Top" Background="Red">
            <Label Content="LOXAM" FontSize="36" FontWeight="Bold" Foreground="White" Margin="20,20,0,0" HorizontalAlignment="Left"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="RETOUR" Foreground="White" FontSize="22" Margin="40,0"/>
                <TextBlock Text="RESERVATION" Foreground="White" FontSize="22" Margin="40,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0" VerticalAlignment="Center">
                <TextBlock Text="Christophe Colin " Foreground="White" FontSize="16" VerticalAlignment="Center"/>
                <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Menu vertical gauche -->
        <StackPanel Width="200" Background="#F0F0F0" Margin="0,100,0,0" HorizontalAlignment="Left">
            <Button Content="🔍 Recherche matériel" Margin="10" Height="50" FontSize="16"/>
            <Button Content="👤 Fiche client" Margin="10" Height="50" FontSize="16"/>
            <Button Content="🔧 Réparation" Margin="10" Height="50" FontSize="16"/>
        </StackPanel>

        <!-- Contenu principal -->
        <StackPanel Margin="220,120,20,20">

            <!-- Titre -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                <Button Content="⬅" Width="50" Height="50" FontSize="20" Margin="0,0,10,0"/>
                <TextBlock Text="Infos clients" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Formulaire Infos Client -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">

                    <TextBlock Text="Nom" FontSize="16" FontWeight="Bold"/>
                    <TextBox Text="{Binding Nom}" Margin="0,5,0,15" Height="35"/>

                    <TextBlock Text="Prénom" FontSize="16" FontWeight="Bold"/>
                    <TextBox Text="{Binding Prenom}" Margin="0,5,0,15" Height="35"/>

                    <TextBlock Text="Tel/Mail" FontSize="16" FontWeight="Bold"/>
                    <TextBox Text="{Binding TelMail}" Margin="0,5,0,15" Height="35"/>

                    <TextBlock Text="Adresse" FontSize="16" FontWeight="Bold"/>
                    <TextBox Text="{Binding Adresse}" Margin="0,5,0,15" Height="35"/>

                    <TextBlock Text="N° Client" FontSize="16" FontWeight="Bold"/>
                    <TextBox Text="{Binding NumeroClient}" Margin="0,5,0,15" Height="35"/>
                </StackPanel>

                <!-- Réservations en cours -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0">

                    <TextBlock Text="Réservations en cours/à venir" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Text="N° de réservation" FontSize="16" FontWeight="Bold"/>
                    <TextBox Text="{Binding NumeroReservation}" Margin="0,5,0,15" Height="35"/>

                    <TextBlock Text="Matériel" FontSize="16" FontWeight="Bold"/>
                    <TextBox Text="{Binding Materiel}" Margin="0,5,0,15" Height="35"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <StackPanel Width="100">
                            <TextBlock Text="Du" FontSize="16" FontWeight="Bold"/>
                            <TextBox Text="{Binding DateDebut}" Margin="0,5,0,0" Height="35"/>
                        </StackPanel>
                        <StackPanel Width="100" Margin="20,0,0,0">
                            <TextBlock Text="Au" FontSize="16" FontWeight="Bold"/>
                            <TextBox Text="{Binding DateFin}" Margin="0,5,0,0" Height="35"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Statut" FontSize="16" FontWeight="Bold"/>
                    <TextBox Text="{Binding Statut}" Margin="0,5,0,15" Height="35"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="👁 Voir" Width="80" Height="35" Margin="0,0,10,0" Command="{Binding CommandVoir}"/>
                        <Button Content="🗑 Supprimer" Width="100" Height="35" Background="Red" Foreground="White" Command="{Binding CommandSupprimer}"/>
                    </StackPanel>

                </StackPanel>
            </Grid>

            <!-- Bouton final -->
            <Button Content="Créer la fiche client"
                    Background="Red" Foreground="White" FontWeight="Bold"
                    Height="60" Width="300" FontSize="16"
                    HorizontalAlignment="Right" Margin="0,30,0,0"/>
        </StackPanel>
    </Grid>
</Window>
