<Window
    x:Class="SAE2._01_Loxam.FicheClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="LOXAM - Fiche client"
    Width="1400"
    Height="900"
    Background="White">

    <Grid>

        <!--  Bandeau rouge en haut  -->
        <Grid
            Height="100"
            VerticalAlignment="Top"
            Background="Red">
            <Label
                Margin="20,20,0,0"
                HorizontalAlignment="Left"
                Content="LOXAM"
                FontSize="36"
                FontWeight="Bold"
                Foreground="White" />

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="40,0"
                    FontSize="22"
                    Foreground="White"
                    Text="RETOUR" />
                <TextBlock
                    Margin="40,0"
                    FontSize="22"
                    Foreground="White"
                    Text="RESERVATION" />
            </StackPanel>

            <StackPanel
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="White"
                    Text="Christophe Colin " />
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Foreground="White"
                    Text="&#xE77B;" />
            </StackPanel>
        </Grid>

        <!--  Menu vertical gauche  -->
        <StackPanel
            Width="200"
            Margin="0,100,0,0"
            HorizontalAlignment="Left"
            Background="#F0F0F0">
            <Button
                Height="50"
                Margin="10"
                Content="🔍 Recherche matériel"
                FontSize="16" />
            <Button
                Height="50"
                Margin="10"
                Content="👤 Fiche client"
                FontSize="16" />
            <Button
                Height="50"
                Margin="10"
                Content="🔧 Réparation"
                FontSize="16" />
        </StackPanel>

        <!--  Contenu principal  -->
        <StackPanel Margin="220,120,20,20">

            <!--  Titre  -->
            <StackPanel
                Margin="0,0,0,20"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <Button
                    Width="50"
                    Height="50"
                    Margin="0,0,10,0"
                    Content="⬅"
                    FontSize="20" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="22"
                    FontWeight="Bold"
                    Text="Infos clients" />
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Formulaire Infos Client  -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">

                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Nom" />
                    <TextBox
                        Height="35"
                        Margin="0,5,0,15"
                        Text="{Binding Nom}" />

                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Prénom" />
                    <TextBox
                        Height="35"
                        Margin="0,5,0,15"
                        Text="{Binding Prenom}" />

                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Tel/Mail" />
                    <TextBox
                        Height="35"
                        Margin="0,5,0,15"
                        Text="{Binding TelMail}" />

                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Adresse" />
                    <TextBox
                        Height="35"
                        Margin="0,5,0,15"
                        Text="{Binding Adresse}" />

                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="N° Client" />
                    <TextBox
                        Height="35"
                        Margin="0,5,0,15"
                        Text="{Binding NumeroClient}" />
                </StackPanel>

                <!--  Réservations en cours  -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0">

                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Réservations en cours/à venir" />

                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="N° de réservation" />
                    <TextBox
                        Height="35"
                        Margin="0,5,0,15"
                        Text="{Binding NumeroReservation}" />

                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Matériel" />
                    <TextBox
                        Height="35"
                        Margin="0,5,0,15"
                        Text="{Binding Materiel}" />

                    <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                        <StackPanel Width="100">
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="Du" />
                            <TextBox
                                Height="35"
                                Margin="0,5,0,0"
                                Text="{Binding DateDebut}" />
                        </StackPanel>
                        <StackPanel Width="100" Margin="20,0,0,0">
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="Au" />
                            <TextBox
                                Height="35"
                                Margin="0,5,0,0"
                                Text="{Binding DateFin}" />
                        </StackPanel>
                    </StackPanel>

                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Statut" />
                    <TextBox
                        Height="35"
                        Margin="0,5,0,15"
                        Text="{Binding Statut}" />

                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                        <Button
                            Width="80"
                            Height="35"
                            Margin="0,0,10,0"
                            Command="{Binding CommandVoir}"
                            Content="👁 Voir" />
                        <Button
                            Width="100"
                            Height="35"
                            Background="Red"
                            Command="{Binding CommandSupprimer}"
                            Content="🗑 Supprimer"
                            Foreground="White" />
                    </StackPanel>

                </StackPanel>
            </Grid>

            <!--  Bouton final  -->
            <Button
                Width="300"
                Height="60"
                Margin="0,30,0,0"
                HorizontalAlignment="Right"
                Background="Red"
                Content="Créer la fiche client"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
