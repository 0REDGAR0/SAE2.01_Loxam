<Window x:Class="SAE2._01_Loxam.EffectuerRetour"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LOXAM - Effectuer un retour" Height="900" Width="1400" Background="White">

    <Grid>

        <!-- Bandeau rouge en haut -->
        <Grid Height="100" VerticalAlignment="Top" Background="Red">
            <Label Content="LOXAM" FontSize="36" FontWeight="Bold" Foreground="White" Margin="20,20,0,0" HorizontalAlignment="Left"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="RETOUR" Foreground="White" FontSize="22" FontWeight="Bold" Margin="40,0"/>
                <TextBlock Text="RESERVATION" Foreground="White" FontSize="22" Margin="40,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0" VerticalAlignment="Center">
                <TextBlock Text="Christophe Colin " Foreground="White" FontSize="16" VerticalAlignment="Center"/>
                <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Menu vertical gauche -->
        <StackPanel Width="200" Background="#F0F0F0" Margin="0,100,0,0" HorizontalAlignment="Left">
            <Button Content="🔍 Recherche matériel" Margin="10" Height="50" FontSize="16"/>
            <Button Content="👤 Fiche client" Margin="10" Height="50" FontSize="16"/>
            <Button Content="🔧 Réparation" Margin="10" Height="50" FontSize="16"/>
        </StackPanel>

        <!-- Contenu principal -->
        <StackPanel Margin="220,120,20,20">

            <!-- Titre -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                <Button Content="⬅" Width="50" Height="50" FontSize="20" Margin="0,0,10,0"/>
                <TextBlock Text="Faire un retour" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Tableau informations matériel -->
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Matériel" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="Lieu" FontWeight="Bold"/>
                    <TextBlock Grid.Column="2" Text="Du" FontWeight="Bold"/>
                    <TextBlock Grid.Column="3" Text="Au" FontWeight="Bold"/>
                    <TextBlock Grid.Column="4" Text="Etat" FontWeight="Bold"/>

                    <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding Materiel}" Margin="0,30,0,0"/>
                    <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Lieu}" Margin="0,30,0,0"/>
                    <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding DateDebut}" Margin="0,30,0,0"/>
                    <TextBlock Grid.Column="3" Grid.Row="1" Text="{Binding DateFin}" Margin="0,30,0,0"/>

                    <Border Grid.Column="4" Grid.Row="1" CornerRadius="5" Padding="5" Margin="0,30,0,0" Background="{Binding CouleurEtat}">
                        <TextBlock Text="{Binding Etat}" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Commentaire -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Commentaire :" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Commentaire}" Margin="10,0,0,0" FontSize="16" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Choix retour -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <GroupBox Header="Matériel rendu :" Width="200" Margin="0,0,20,0">
                    <StackPanel>
                        <RadioButton Content="Oui" GroupName="Rendu" IsChecked="{Binding RenduOui}"/>
                        <RadioButton Content="Non" GroupName="Rendu" IsChecked="{Binding RenduNon}"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="État matériel :" Width="300">
                    <StackPanel>
                        <RadioButton Content="Bon" GroupName="Etat" IsChecked="{Binding EtatBon}"/>
                        <RadioButton Content="Endommagé" GroupName="Etat" IsChecked="{Binding EtatEndommage}"/>
                        <RadioButton Content="Hors service" GroupName="Etat" IsChecked="{Binding EtatHS}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <!-- Image illustration -->
            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="10" Padding="5" Margin="0,0,0,20" Width="300" Height="200">
                <Image Source="{Binding ImageRetour}" Stretch="Uniform"/>
            </Border>

            <!-- Bouton final -->
            <Button Content="ENREGISTRER RETOUR"
                    Background="Red" Foreground="White" FontWeight="Bold"
                    Height="60" Width="300" FontSize="16"
                    HorizontalAlignment="Right" Margin="0,20,0,0"/>
        </StackPanel>

    </Grid>
</Window>
