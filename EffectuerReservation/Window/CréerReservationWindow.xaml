<Window
    x:Class="SAE2._01_Loxam.FicheClients.UserControls.CréerReservationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Créer une réservation"
    Width="650"
    Height="600"
    Background="#FAFAFA"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <Border
        Margin="20"
        Padding="20"
        Background="White"
        BorderBrush="Gray"
        BorderThickness="1"
        CornerRadius="10">

        <StackPanel>

            <TextBlock
                Margin="0,0,0,20"
                FontSize="26"
                FontWeight="Bold"
                Text="Créer une réservation"
                TextAlignment="Center" />

            <!--  Recherche Client  -->
            <StackPanel Margin="0,5" Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    FontWeight="SemiBold"
                    Text="Rechercher client :" />
                <TextBox
                    x:Name="txtRechercheClient"
                    Width="350"
                    TextChanged="txtRechercheClient_TextChanged" />
            </StackPanel>

            <ListBox
                x:Name="listClients"
                Width="500"
                Height="100"
                DisplayMemberPath="NomComplet"
                SelectionChanged="listClients_SelectionChanged" />

            <!--  Recherche Matériel  -->
            <StackPanel Margin="0,5" Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    FontWeight="SemiBold"
                    Text="Rechercher matériel :" />
                <TextBox
                    x:Name="txtRechercheMateriel"
                    Width="350"
                    TextChanged="txtRechercheMateriel_TextChanged" />
            </StackPanel>

            <ListBox
                x:Name="listMateriels"
                Width="500"
                Height="100"
                DisplayMemberPath="NomComplet"
                SelectionChanged="listMateriels_SelectionChanged" />

            <!--  Dates  -->
            <StackPanel Margin="0,5" Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    FontWeight="SemiBold"
                    Text="Début de location :" />
                <DatePicker x:Name="dpDebut" Width="200" />
            </StackPanel>

            <StackPanel Margin="0,5" Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    FontWeight="SemiBold"
                    Text="Retour effectif :" />
                <DatePicker x:Name="dpRetour" Width="200" />
            </StackPanel>

            <!--  Prix total  -->
            <StackPanel Margin="0,5" Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    FontWeight="SemiBold"
                    Text="Prix total :" />
                <TextBlock
                    x:Name="txtPrixTotal"
                    FontSize="16"
                    FontWeight="Bold" />
            </StackPanel>

            <!--  Bouton  -->
            <Button
                x:Name="btnValider"
                Height="50"
                Margin="0,15,0,0"
                Click="btnValider_Click"
                Content="Valider la réservation"
                FontSize="18" />

        </StackPanel>
    </Border>
</Window>
