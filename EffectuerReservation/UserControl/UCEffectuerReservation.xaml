<UserControl
    x:Class="SAE2._01_Loxam.FicheClients.UserControls.UCEffectuerReservation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="686"
    d:DesignWidth="1040"
    mc:Ignorable="d">

    <!--  Contenu principal  -->
    <StackPanel>

        <!--  Titre + bouton rechercher  -->
        <StackPanel
            Margin="0,0,0,20"
            HorizontalAlignment="Stretch"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="22"
                FontWeight="Bold"
                Text="Effectuer une réservation     " />
        </StackPanel>

        <!--  Bloc Disponibilités  -->
        <Border
            Padding="20"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="10">

            <StackPanel>
                <StackPanel Orientation="Horizontal">

                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Disponibilités           " />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="🔍" />
                    <TextBox
                        x:Name="txtRecherche"
                        Width="300"
                        Height="30"
                        FontSize="20"
                        Text=""
                        TextChanged="TextBox_TextChanged"
                        TextWrapping="Wrap" />
                </StackPanel>

                <!--  DataGrid  -->
                <DataGrid
                    x:Name="DataGridResa"
                    Margin="0,10,0,0"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    ColumnHeaderHeight="50"
                    FontSize="16"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    MouseDoubleClick="DataGridResa_MouseDoubleClick"
                    RowHeight="25">

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding NumeroReservation}"
                            Header="Reservation" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Client}"
                            Header="Client" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Materiel}"
                            Header="Materiel" />

                        <!--  Colonne Statut colorée  -->
                        <DataGridTemplateColumn
                            Width="*"
                            Header="Statut"
                            SortMemberPath="StatutReservation">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="1"
                                        Padding="2"
                                        Background="{Binding CouleurStatut}"
                                        CornerRadius="2">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="10"
                                            Foreground="White"
                                            Text="{Binding StatutReservation}" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding DateReservation, StringFormat={}{0:dd/MM/yyyy}}"
                            Header="Date de réservation" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding DateDebutLocation, StringFormat={}{0:dd/MM/yyyy}}"
                            Header="Début de location" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding DateRetourEffective, StringFormat={}{0:dd/MM/yyyy}}"
                            Header="Retour effectif" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding PrixTotal}"
                            Header="Prix Total" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
