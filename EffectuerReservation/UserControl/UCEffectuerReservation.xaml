<UserControl
    x:Class="SAE2._01_Loxam.FicheClients.UserControls.UCEffectuerReservation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="686"
    d:DesignWidth="1040"
    mc:Ignorable="d">

    <!--  Contenu principal  -->
    <StackPanel>

        <!--  Titre + bouton rechercher  -->
        <StackPanel
            Margin="0,0,0,20"
            HorizontalAlignment="Stretch"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="22"
                FontWeight="Bold"
                Text="Effectuer une réservation" />
            <Button
                Width="300"
                Height="50"
                Margin="20,0,0,0"
                HorizontalAlignment="Right"
                Background="Red"
                Content="RECHERCHER UNE RÉSERVATION"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>

        <!--  Bloc Disponibilités  -->
        <Border
            Padding="20"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="10">

            <StackPanel>

                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="Disponibilités" />

                <!--  DataGrid  -->
                <DataGrid
                    x:Name="DataGridResa"
                    Margin="0,10,0,0"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    ColumnHeaderHeight="50"
                    FontSize="16"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    RowHeight="50">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Reservation" Binding="{Binding NumeroReservation}" Width="*" />
                        <DataGridTextColumn Header="Client" Binding="{Binding Client}" Width="*" />
                        <DataGridTextColumn Header="Materiel" Binding="{Binding Materiel}" Width="*" />
                        <DataGridTextColumn Header="Date Reservation" Binding="{Binding DateReservation, StringFormat=d}" Width="*" />
                        <DataGridTextColumn Header="Debut Location" Binding="{Binding DateDebutLocation, StringFormat=d}" Width="*" />
                        <DataGridTextColumn Header="Retour Effective" Binding="{Binding DateRetourEffective, StringFormat=d}" Width="*" />
                        <DataGridTextColumn Header="Retour Reelle" Binding="{Binding DateRetourReelle, StringFormat=d}" Width="*" />
                        <DataGridTextColumn Header="Prix Total" Binding="{Binding PrixTotal}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>