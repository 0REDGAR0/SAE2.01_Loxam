<UserControl
    x:Class="SAE2._01_Loxam.FicheClients.UserControls.UCEffectuerReservation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="686"
    d:DesignWidth="1040"
    mc:Ignorable="d">

    <!--  Contenu principal  -->
    <StackPanel>

        <!--  Titre + bouton rechercher  -->
        <StackPanel
            Margin="0,0,0,20"
            HorizontalAlignment="Stretch"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="22"
                FontWeight="Bold"
                Text="Effectuer une réservation     " />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="22"
                Text="🔍" />
            <TextBox
                x:Name="txtRecherche"
                Width="300"
                Height="50"
                FontSize="33"
                Text=""
                TextChanged="TextBox_TextChanged"
                TextWrapping="Wrap" />
        </StackPanel>

        <!--  Bloc Disponibilités  -->
        <Border
            Padding="20"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="10">

            <StackPanel>

                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="Disponibilités" />

                <!--  DataGrid  -->
                <DataGrid
                    x:Name="DataGridResa"
                    Margin="0,10,0,0"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    ColumnHeaderHeight="50"
                    FontSize="16"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    RowHeight="50">

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding NumeroReservation}"
                            Header="Reservation" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Client}"
                            Header="Client" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Materiel}"
                            Header="Materiel" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding DateReservation, StringFormat=d}"
                            Header="Date Reservation" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding DateDebutLocation, StringFormat=d}"
                            Header="Debut Location" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding DateRetourEffective, StringFormat=d}"
                            Header="Retour Effective" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding DateRetourReelle, StringFormat=d}"
                            Header="Retour Reelle" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding PrixTotal}"
                            Header="Prix Total" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>