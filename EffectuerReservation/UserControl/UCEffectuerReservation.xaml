<UserControl x:Class="SAE2._01_Loxam.FicheClients.UserControls.UCEffectuerReservation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
             d:DesignHeight="686"
             d:DesignWidth="1040"
             mc:Ignorable="d">

    <!-- Contenu principal -->
    <StackPanel>

        <!-- Titre + bouton rechercher -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,20">
            <TextBlock Text="Effectuer une réservation" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="RECHERCHER UNE RÉSERVATION"
                    Background="Red" Foreground="White" FontWeight="Bold"
                    Width="300" Height="50"
                    HorizontalAlignment="Right"
                    Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Bloc Disponibilités -->
        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="10" Padding="20">

            <StackPanel>

                <TextBlock Text="Disponibilités" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- DataGrid -->
                <DataGrid x:Name="DataGridDisponibilites"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          RowHeight="50"
                          HeadersVisibility="Column"
                          ColumnHeaderHeight="50"
                          FontSize="16"
                          Margin="0,10,0,0"
                          ItemsSource="{Binding ListeDisponibilites}">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="Matériel" Binding="{Binding Materiel}" Width="200"/>
                        <DataGridTextColumn Header="Lieu" Binding="{Binding Lieu}" Width="150"/>
                        <DataGridTextColumn Header="Du" Binding="{Binding DateDebut}" Width="150"/>
                        <DataGridTextColumn Header="Au" Binding="{Binding DateFin}" Width="150"/>

                        <!-- Etat avec bindings -->
                        <DataGridTemplateColumn Header="État" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="5" Padding="5" Background="{Binding CouleurEtat}">
                                        <TextBlock Text="{Binding Etat}" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Voir détails -->
                        <DataGridTemplateColumn Header="" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="👁 Voir détails" Width="100" Height="30" Margin="5" Command="{Binding CommandVoirDetails}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Réserver -->
                        <DataGridTemplateColumn Header="" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="RÉSERVER" Background="Red" Foreground="White" Width="100" Height="30" Margin="5" Command="{Binding CommandReserver}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

    </StackPanel>
</UserControl>