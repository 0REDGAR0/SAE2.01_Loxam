<Window
    x:Class="SAE2._01_Loxam.MaterielEnReserve.DetailMaterielWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Détail du matériel"
    Width="600"
    Height="400"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">
    <Border Padding="20" Background="White">
        <StackPanel>

            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="Détail du matériel"
                TextAlignment="Center" />
            <Border
                Margin="0,20,0,0"
                Padding="10"
                Background="{Binding CouleurEtat}"
                CornerRadius="5">
                <TextBlock
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{Binding StatutReservation}"
                    TextAlignment="Center" />
            </Border>
            <StackPanel Margin="0,15,0,5" Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    FontWeight="SemiBold"
                    Text="Référence : " />
                <TextBlock Text="{Binding Reference}" />
            </StackPanel>

            <StackPanel Margin="0,5" Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    FontWeight="SemiBold"
                    Text="Nom : " />
                <TextBlock Text="{Binding NomMateriel}" />
            </StackPanel>

            <StackPanel Margin="0,5" Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    FontWeight="SemiBold"
                    Text="Descriptif : " />
                <TextBlock Text="{Binding Descriptif}" />
            </StackPanel>

            <StackPanel Margin="0,5" Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    FontWeight="SemiBold"
                    Text="Prix/jour : " />
                <TextBlock Text="{Binding PrixJournee, StringFormat={}{0} €}" />
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
