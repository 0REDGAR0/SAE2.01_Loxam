<Window x:Class="SAE2._01_Loxam.MaterielEnReserve.DetailMaterielWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Détail du matériel" Height="400" Width="600">
    <Border Padding="20" Background="White">
        <StackPanel>

            <TextBlock Text="Détail du matériel" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Référence : " FontWeight="SemiBold" Width="150"/>
                <TextBlock Text="{Binding Reference}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Nom : " FontWeight="SemiBold" Width="150"/>
                <TextBlock Text="{Binding NomMateriel}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Descriptif : " FontWeight="SemiBold" Width="150"/>
                <TextBlock Text="{Binding Descriptif}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Prix/jour : " FontWeight="SemiBold" Width="150"/>
                <TextBlock Text="{Binding PrixJournee, StringFormat={}{0} €}"/>
            </StackPanel>

            <Border Background="{Binding CouleurEtat}" CornerRadius="5" Padding="10" Margin="0,20,0,0">
                <TextBlock Text="{Binding EtatAffichage}" FontSize="20" FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
            </Border>

        </StackPanel>
    </Border>
</Window>
