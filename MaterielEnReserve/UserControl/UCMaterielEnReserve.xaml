<UserControl
    x:Class="SAE2._01_Loxam.FicheClients.UserControls.UCMaterielEnReserve"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="686"
    d:DesignWidth="1040"
    mc:Ignorable="d">
    <StackPanel>

        <!--  Titre  -->
        <StackPanel
            Margin="0,0,0,20"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
                Width="50"
                Height="50"
                Margin="0,0,10,0"
                Content="⬅"
                FontSize="20" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="22"
                FontWeight="Bold"
                Text="Rechercher une réservation" />
        </StackPanel>

        <!--  Zone de recherche  -->
        <StackPanel Margin="0,0,0,20" Orientation="Horizontal">

            <!--  Champ recherche  -->
            <Border
                Width="400"
                Height="50"
                Margin="0,0,10,0"
                Background="#F5F5F5"
                CornerRadius="25">
                <DockPanel LastChildFill="True">
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Text="🔍" />
                    <TextBox
                        Width="350"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="16"
                        Foreground="#999999"
                        Text="{Binding RechercheTexte}"
                        TextAlignment="Left"
                        TextWrapping="NoWrap" />
                </DockPanel>
            </Border>


            <!--  Bouton filtre  -->
            <Grid>
                <Button
                    Width="50"
                    Height="50"
                    Content="⚙"
                    FontSize="22" />
                <Popup IsOpen="{Binding IsFiltreOuvert}" Placement="Bottom">
                    <Border
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="5">
                        <StackPanel Margin="10">
                            <TextBlock Margin="5" Text="• trier par n° de client" />
                            <TextBlock Margin="5" Text="• trier par le nom du client" />
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
        </StackPanel>

        <!--  Tableau  -->
        <Border
            Padding="10"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="10">
            <DataGrid
                x:Name="DataGridReservations"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                ColumnHeaderHeight="50"
                FontSize="16"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding ListeReservations}"
                RowHeight="50">

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="200"
                        Binding="{Binding Materiel}"
                        Header="Matériel" />
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding Lieu}"
                        Header="Lieu" />
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding DateDebut}"
                        Header="Du" />
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding DateFin}"
                        Header="Au" />
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding Statut}"
                        Header="Statut" />

                    <DataGridTemplateColumn Width="150" Header="">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Width="130"
                                    Height="35"
                                    Margin="5"
                                    Command="{Binding CommandValider}"
                                    Content="Valider location" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </StackPanel>
</UserControl>
