<UserControl
    x:Class="SAE2._01_Loxam.FicheClients.UserControls.UCMaterielEnReserve"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="686"
    d:DesignWidth="1040"
    mc:Ignorable="d">

    <StackPanel>

        <!--  Titre  -->
        <StackPanel
            Margin="0,0,0,20"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="22"
                FontWeight="Bold"
                Text="Rechercher un matériel" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="20"
                Text=" 🔍 " />
            <TextBox
                x:Name="txtRecherche"
                Width="300"
                Height="30"
                FontSize="20"
                Text=""
                TextChanged="TextBox_TextChanged"
                TextWrapping="Wrap" />
        </StackPanel>

        <!--  Tableau avec scroll  -->
        <Border
            Padding="10"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="10">

            <!--  On ajoute ici le scroll uniquement autour du DataGrid  -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <DataGrid
                    x:Name="DataGridMateriel"
                    MaxHeight="550"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    ColumnHeaderHeight="50"
                    FontSize="16"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    MouseDoubleClick="DataGridMateriel_MouseDoubleClick"
                    RowHeight="25">

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding NumMateriel}"
                            Header="Num." />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Reference}"
                            Header="Référence" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding NomMateriel}"
                            Header="Nom" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Descriptif}"
                            Header="Descriptif" />
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding PrixJournee, StringFormat={}{0} €}"
                            Header="Prix/Jour" />
                        <DataGridTemplateColumn
                            Width="150"
                            Header="État"
                            SortMemberPath="StatutReservation">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="1"
                                        Padding="2"
                                        Background="{Binding CouleurEtat}"
                                        CornerRadius="2">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="10"
                                            Foreground="White"
                                            Text="{Binding StatutReservation}" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>

        </Border>
    </StackPanel>
</UserControl>
