<UserControl
    x:Class="SAE2._01_Loxam.FicheClients.UserControls.UCMaterielEnReserve"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="686"
    d:DesignWidth="1040"
    mc:Ignorable="d">
    <StackPanel>

        <!--  Titre  -->
        <StackPanel
            Margin="0,0,0,20"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="22"
                FontWeight="Bold"
                Text="Rechercher une réservation             " />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="20"
                Text="🔍" />
            <TextBox
                x:Name="txtRecherche"
                Width="300"
                Height="30"
                FontSize="20"
                Text=""
                TextChanged="TextBox_TextChanged"
                TextWrapping="Wrap" />
        </StackPanel>

        <!--  Zone de recherche  -->

        <!--  Tableau  -->
        <Border
            Padding="10"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="10">
            <DataGrid
                x:Name="DataGridMateriel"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                ColumnHeaderHeight="50"
                FontSize="16"
                HeadersVisibility="Column"
                IsReadOnly="True"
                RowHeight="50" MouseDoubleClick="DataGridMateriel_MouseDoubleClick">

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding NumMateriel}"
                        Header="Num." />
                    <DataGridTextColumn
                        Width="200"
                        Binding="{Binding Reference}"
                        Header="Référence" />
                    <DataGridTextColumn
                        Width="200"
                        Binding="{Binding NomMateriel}"
                        Header="Nom" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Descriptif}"
                        Header="Descriptif" />
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding PrixJournee, StringFormat={}{0} €}"
                        Header="Prix/Jour" />
                </DataGrid.Columns>
            </DataGrid>

        </Border>
    </StackPanel>
</UserControl>
