<Window
    x:Class="SAE2._01_Loxam.FicheClients.Windows.WindowFicheClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam.FicheClients.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WindowFicheClient"
    Width="442"
    Height="556"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <StackPanel x:Name="panelFormClient" Margin="20">

        <!--  Grille principale à deux colonnes  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Infos Client  -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">

                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Infos Client" />

                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Nom" />
                <TextBox
                    Height="35"
                    Margin="0,5,0,15"
                    Text="{Binding NomClient, ValidatesOnExceptions=true}" />

                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Prénom" />
                <TextBox
                    Height="35"
                    Margin="0,5,0,15"
                    Text="{Binding PrenomClient, ValidatesOnExceptions=true}" />

                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Adresse" />
                <TextBox
                    Height="35"
                    Margin="0,5,0,15"
                    Text="{Binding AdresseClient, ValidatesOnExceptions=true}" />

                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Numéro" />
                <TextBox
                    Height="35"
                    Margin="0,5,0,15"
                    Text="{Binding NumeroTelClient, ValidatesOnExceptions=true}" />



                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Mail" />
                <TextBox
                    Height="35"
                    Margin="0,5,0,15"
                    Text="{Binding MailClient, ValidatesOnExceptions=true}" />
            </StackPanel>

        </Grid>

        <!--  Bouton final en dessous  -->
        <Button
            x:Name="butValider"
            Width="300"
            Height="60"
            Margin="0,0,3,0"
            Background="Red"
            Click="butValider_Click"
            Content="Valider"
            FontSize="16"
            FontWeight="Bold"
            Foreground="White" />

    </StackPanel>
</Window>
