<UserControl
    x:Class="SAE2._01_Loxam.FicheClients.UserControls.UCFicheClients"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="686"
    d:DesignWidth="1040"
    mc:Ignorable="d">

    <!--  CONTENEUR PRINCIPAL  -->
    <StackPanel Margin="20">

        <!--  Grille principale à deux colonnes  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Infos Client  -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">

                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Infos Client" />

                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Nom" />
                <TextBox
                    Height="35"
                    Margin="0,5,0,15"
                    Text="{Binding NomClient}" />

                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Prénom" />
                <TextBox
                    Height="35"
                    Margin="0,5,0,15"
                    Text="{Binding PrenomClient}" />

                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Mail" />
                <TextBox
                    Height="35"
                    Margin="0,5,0,15"
                    Text="{Binding MailClient}" />

                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Numéro" />
                <TextBox
                    Height="35"
                    Margin="0,5,0,15"
                    Text="{Binding NumeroTelClient}" />

                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Adresse" />
                <TextBox
                    Height="35"
                    Margin="0,5,0,15"
                    Text="{Binding AdresseClient}" />
            </StackPanel>

            <!--  Réservations  -->
            <StackPanel Grid.Column="1" Margin="20,0,0,0">

                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Réservations en cours/à venir" />

                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="N° de réservation" />
                <TextBox
                    Height="35"
                    Margin="0,5,0,15"
                    Text="{Binding NumeroReservation}" />

                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Matériel" />
                <TextBox
                    Height="35"
                    Margin="0,5,0,15"
                    Text="{Binding Materiel}" />

                <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                    <StackPanel Width="100">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Du" />
                        <TextBox
                            Height="35"
                            Margin="0,5,0,0"
                            Text="{Binding DateDebut}" />
                    </StackPanel>
                    <StackPanel Width="100" Margin="20,0,0,0">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Au" />
                        <TextBox
                            Height="35"
                            Margin="0,5,0,0"
                            Text="{Binding DateFin}" />
                    </StackPanel>
                </StackPanel>

                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Statut" />
                <TextBox
                    Height="35"
                    Margin="0,5,0,15"
                    Text="{Binding Statut}" />

                <!--  Boutons  -->
                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                    <Button
                        Width="80"
                        Height="35"
                        Margin="0,0,10,0"
                        Command="{Binding CommandVoir}"
                        Content="👁 Voir" />
                    <Button
                        Width="100"
                        Height="35"
                        Background="Red"
                        Command="{Binding CommandSupprimer}"
                        Content="🗑 Supprimer"
                        Foreground="White" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  Bouton final en dessous  -->
        <Button
            x:Name="butCréerFicheClient"
            Width="300"
            Height="60"
            Margin="0,30,0,0"
            HorizontalAlignment="Right"
            Background="Red"
            Click="butCréerFicheClient_Click"
            Content="Créer la fiche client"
            FontSize="16"
            FontWeight="Bold"
            Foreground="White" />

    </StackPanel>
</UserControl>
