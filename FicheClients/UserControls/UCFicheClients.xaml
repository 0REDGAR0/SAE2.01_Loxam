<UserControl
    x:Class="SAE2._01_Loxam.FicheClients.UserControls.UCFicheClients"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="665"
    d:DesignWidth="1040"
    mc:Ignorable="d">

    <StackPanel Margin="20">

        <!--  Titre avec flèche  -->
        <StackPanel Margin="0,0,0,20" Orientation="Horizontal">
            <TextBlock
                Margin="0,0,10,0"
                FontSize="24"
                FontWeight="Bold"
                Text="←" />
            <TextBlock
                FontSize="22"
                FontWeight="Bold"
                Text="Infos clients" />
        </StackPanel>

        <!--  Zone de recherche  -->
        <StackPanel Margin="0,0,0,20" Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="22"
                Text="🔍" />
            <TextBox
                x:Name="textMotClefChien"
                Width="300"
                Height="50"
                FontSize="33"
                Text=""
                TextChanged="textMotClefChien_TextChanged"
                TextWrapping="Wrap" />

            <StackPanel Margin="400,0,0,0" Orientation="Horizontal">
                <Button
                    x:Name="butAjout"
                    Width="50"
                    Height="50"
                    Margin="0,0,20,0"
                    Background="Red"
                    Click="butCréerFicheClient_Click"
                    Content="➕"
                    FontSize="25"
                    FontWeight="Bold"
                    Foreground="White" />
                <Button
                    x:Name="butEdit"
                    Width="50"
                    Height="50"
                    Margin="0,0,20,0"
                    Background="Red"
                    Click="butEdit_Click"
                    Content="📝"
                    FontSize="25"
                    FontWeight="Bold"
                    Foreground="White" />
                <Button
                    x:Name="butSupp"
                    Width="50"
                    Height="50"
                    Background="Red"
                    Click="butSupp_Click"
                    Content="🗑️"
                    FontSize="25"
                    FontWeight="Bold"
                    Foreground="White" />
            </StackPanel>
        </StackPanel>

        <!--  Boutons d'action  -->
        <StackPanel
            Margin="0,0,0,20"
            HorizontalAlignment="Left"
            Orientation="Horizontal" />

        <!--  Tableau DataGrid  -->
        <Border
            Padding="20"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="10">

            <DataGrid
                x:Name="dgClients"
                AutoGenerateColumns="False"
                ColumnHeaderHeight="50"
                FontSize="16"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding LesClients}"
                RowHeight="50">

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NumClient}"
                        Header="NumClient" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NomClient}"
                        Header="Nom" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PrenomClient}"
                        Header="Prénom" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding AdresseClient}"
                        Header="Adresse" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding MailClient}"
                        Header="Mail" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NumeroTelClient}"
                        Header="Numéro" />
                </DataGrid.Columns>

            </DataGrid>
        </Border>

    </StackPanel>
</UserControl>
