<UserControl
    x:Class="SAE2._01_Loxam.FicheClients.UserControls.UCFicheClients"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <!--  CONTENEUR PRINCIPAL  -->
    <StackPanel>

        <!--  Première section  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500" />
                <ColumnDefinition Width="8*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Content="&#xF0D5;"
                FontFamily="Segoe MDL2 Assets"
                FontSize="20" />
            <TextBlock
                Margin="40,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Text="Infos Client"
                TextWrapping="Wrap" />
            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Text="Réservation en cours/à venir " />
        </Grid>

        <!--  Deuxième section  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500" />
                <ColumnDefinition Width="8*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Label x:Name="labNom" Content="Nom" />
                <TextBox x:Name="txtNom" />
                <Label x:Name="labPrenom" Content="Prénom" />
                <TextBox x:Name="txtPrenom" />
                <Label x:Name="labTelMail" Content="Tel/Mail" />
                <TextBox x:Name="txtTelMail" />
                <Label x:Name="labAdresse" Content="Adresse" />
                <TextBox x:Name="txtAdress" Height="16" />
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Label x:Name="labNumReservation" Content="N° de Réservation" />
                <TextBox x:Name="txtNumReservation" />
                <Label x:Name="labMateriel" Content="Matériel" />
                <TextBox x:Name="txtMateriel" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8*" />
                        <ColumnDefinition Width="8*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="23" />
                        <RowDefinition Height="23" />
                    </Grid.RowDefinitions>
                    <Label x:Name="labDu" Content="Du" />
                    <Label
                        x:Name="labAu"
                        Grid.Column="1"
                        Content="Au" />
                    <TextBox
                        x:Name="txtDuDate"
                        Grid.Row="1"
                        Grid.Column="0"
                        Height="17.96" />
                    <TextBox
                        x:Name="txtAuDate"
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="17.96" />
                </Grid>
                <Label Height="23" Content="Statut" />
                <TextBox x:Name="txtStatut" />
            </StackPanel>
        </Grid>

    </StackPanel>
</UserControl>
