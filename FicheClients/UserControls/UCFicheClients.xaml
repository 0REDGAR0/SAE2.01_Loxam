<UserControl
    x:Class="SAE2._01_Loxam.FicheClients.UserControls.UCFicheClients"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="686"
    d:DesignWidth="1040"
    mc:Ignorable="d">

    <!--  CONTENEUR PRINCIPAL  -->
    <Grid Background="#FFE5E5E5">
        <DataGrid
            x:Name="dgChiens"
            Width="300"
            Margin="247,80,247,0"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding LesChiens}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Nom, ValidatesOnExceptions=true}"
                    Header="Nom" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Maitre, ValidatesOnExceptions=true}"
                    Header="Maître" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Poids, ValidatesOnExceptions=true}"
                    Header="Poids (kg)" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBox
            x:Name="textMotClefChien"
            Height="20"
            Margin="312,33,312,0"
            VerticalAlignment="Top"
            Text=""
            TextChanged="textMotClefChien_TextChanged"
            TextWrapping="Wrap" />
        <Button
            x:Name="butSupp"
            Width="30"
            Height="30"
            Margin="592,126,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="butSupp_Click"
            Content="&#xE74D;"
            FontFamily="Segoe MDL2 Assets"
            ToolTip="Supprimer" />
        <Button
            x:Name="butAjout"
            Width="30"
            Height="30"
            Margin="592,183,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="butAjout_Click"
            Content="&#xE109;"
            FontFamily="Segoe MDL2 Assets" />
        <Button
            x:Name="butEdit"
            Width="30"
            Height="30"
            Margin="592,253,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="butEdit_Click"
            Content="&#xE104;"
            FontFamily="Segoe MDL2 Assets" />
    </Grid>
</UserControl>
