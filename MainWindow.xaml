<Window
    x:Class="SAE2._01_Loxam.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1280"
    Height="830"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <!--  Bandeau rouge en haut  -->
        <Grid
            Height="100"
            VerticalAlignment="Top"
            Background="Red">
            <Label
                Margin="20,20,0,0"
                HorizontalAlignment="Left"
                Content="LOXAM"
                FontSize="36"
                FontWeight="Bold"
                Foreground="White" />

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="40,0"
                    FontSize="22"
                    Foreground="White"
                    Text="RETOUR" />
                <TextBlock
                    Margin="40,0"
                    FontSize="22"
                    Foreground="White"
                    Text="RESERVATION" />
            </StackPanel>

            <StackPanel
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="White"
                    Text="Christophe Colin " />
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Foreground="White"
                    Text="&#xE77B;" />
            </StackPanel>
        </Grid>

        <!--  Menu vertical gauche  -->
        <StackPanel
            Width="200"
            Margin="0,100,0,0"
            HorizontalAlignment="Left"
            Background="#F0F0F0">
            <Button
                Height="50"
                Margin="10"
                Content="🔍 Recherche matériel"
                FontSize="16" />
            <Button
                x:Name="butFicheClient"
                Height="50"
                Margin="10"
                Click="butFicheClient_Click"
                Content="👤 Fiche client"
                FontSize="16" />
            <Button
                Height="50"
                Margin="10"
                Content="🔧 Réparation"
                FontSize="16" />
        </StackPanel>

        <!--  Zone centrale  -->
        <StackPanel x:Name="SPcentral" Margin="226,108,20,20">
            <TextBlock
                Margin="0,10"
                FontSize="20"
                FontWeight="Bold"
                Text="Rechercher du matériel" />
            <Grid Height="639" Background="#FFE5E5E5">
                <DataGrid
                    x:Name="dgClients"
                    Width="300"
                    Margin="247,80,247,0"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding LesChiens}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Nom, ValidatesOnExceptions=true}"
                            Header="Nom" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Maitre, ValidatesOnExceptions=true}"
                            Header="Maître" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Poids, ValidatesOnExceptions=true}"
                            Header="Poids (kg)" />
                    </DataGrid.Columns>
                </DataGrid>
                <TextBox
                    x:Name="textMotClefChien"
                    Height="20"
                    Margin="312,33,312,0"
                    VerticalAlignment="Top"
                    Text=""
                    TextChanged="textMotClefChien_TextChanged"
                    TextWrapping="Wrap" />
                <Button
                    x:Name="butSupp"
                    Width="30"
                    Height="30"
                    Margin="592,126,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="butSupp_Click"
                    Content="&#xE74D;"
                    FontFamily="Segoe MDL2 Assets"
                    ToolTip="Supprimer" />
                <Button
                    x:Name="butAjout"
                    Width="30"
                    Height="30"
                    Margin="592,183,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="butAjout_Click"
                    Content="&#xE109;"
                    FontFamily="Segoe MDL2 Assets" />
                <Button
                    x:Name="butEdit"
                    Width="30"
                    Height="30"
                    Margin="592,253,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="butEdit_Click"
                    Content="&#xE104;"
                    FontFamily="Segoe MDL2 Assets" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
