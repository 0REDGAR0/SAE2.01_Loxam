<Window
    x:Class="SAE2._01_Loxam.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
    xmlns:UserControlsRepa="clr-namespace:SAE2._01_Loxam.Classe.Materiel.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1280"
    Height="830"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#e74c3c" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#c0392b" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#a93226" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <!--  Bandeau rouge en haut  -->
        <Grid
            Height="100"
            VerticalAlignment="Top"
            Background="Red">
            <Button
                x:Name="butLoxam"
                Width="141"
                Margin="10,20,0,20"
                HorizontalAlignment="Left"
                Background="Red"
                BorderBrush="Red"
                Click="butLoxam_Click"
                Content="LOXAM"
                FontSize="36"
                FontWeight="Bold"
                Foreground="White" />

            <StackPanel
                x:Name="SPRetourResa"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="butRetour"
                    Margin="40,0"
                    HorizontalAlignment="Left"
                    Background="Red"
                    BorderBrush="Red"
                    Click="butRetour_Click"
                    Content="RETOUR"
                    FontSize="22"
                    Foreground="White" />
                <Button
                    x:Name="butReservation"
                    Margin="40,0"
                    HorizontalAlignment="Left"
                    Background="Red"
                    BorderBrush="Red"
                    Click="butReservation_Click"
                    Content="RESERVATION"
                    FontSize="22"
                    Foreground="White" />
            </StackPanel>

            <StackPanel
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    x:Name="labConnect"
                    Margin="0,0,7,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Inconnu " />
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Foreground="White"
                    Text="&#xE77B;" />
            </StackPanel>
        </Grid>

        <!--  Menu vertical gauche  -->
        <StackPanel
            Width="200"
            Margin="0,100,0,0"
            HorizontalAlignment="Left"
            Background="#FFD0D0D0">
            <Button
                x:Name="butRechercheMat"
                Height="50"
                Margin="10"
                Click="butRechercheMat_Click"
                Content="🔍 Recherche matériel"
                FontSize="16"
                Style="{StaticResource ModernButtonStyle}" />
            <Button
                x:Name="butFicheClient"
                Height="50"
                Margin="10"
                Click="butFicheClient_Click"
                Content="👤 Fiche client"
                FontSize="16"
                Style="{StaticResource ModernButtonStyle}" />
            <Button
                x:Name="butReparation"
                Height="50"
                Margin="10"
                Click="butReparation_Click"
                Content="🔧 Réparation"
                FontSize="16"
                Style="{StaticResource ModernButtonStyle}" />
        </StackPanel>

        <!--  Zone centrale  -->
        <StackPanel x:Name="SPcentral" Margin="226,108,20,20" />
    </Grid>

</Window>

