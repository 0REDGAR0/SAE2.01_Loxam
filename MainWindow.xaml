<Window
    x:Class="SAE2._01_Loxam.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1280"
    Height="830"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <!--  Bandeau rouge en haut  -->
        <Grid
            Height="100"
            VerticalAlignment="Top"
            Background="Red">
            <Button
                x:Name="butLoxam"
                Width="141"
                Margin="10,20,0,20"
                HorizontalAlignment="Left"
                Background="Red"
                BorderBrush="Red"
                Click="butLoxam_Click"
                Content="LOXAM"
                FontSize="36"
                FontWeight="Bold"
                Foreground="White" />

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="butRetour"
                    Width="141"
                    Margin="40,0"
                    HorizontalAlignment="Left"
                    Background="Red"
                    BorderBrush="Red"
                    Click="butRetour_Click"
                    Content="RETOUR"
                    FontSize="36"
                    FontWeight="Bold"
                    Foreground="White" />
                <Button
                    x:Name="butReservation"
                    Margin="40,0"
                    HorizontalAlignment="Left"
                    Background="Red"
                    BorderBrush="Red"
                    Content="RESERVATION"
                    FontSize="36"
                    FontWeight="Bold"
                    Foreground="White" Click="butReservation_Click" />
            </StackPanel>

            <StackPanel
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="White"
                    Text="Inconnu " />
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Foreground="White"
                    Text="&#xE77B;" />
            </StackPanel>
        </Grid>

        <!--  Menu vertical gauche  -->
        <StackPanel
            Width="200"
            Margin="0,100,0,0"
            HorizontalAlignment="Left"
            Background="#F0F0F0">
            <Button
                Height="50"
                Margin="10"
                Content="🔍 Recherche matériel"
                FontSize="16" />
            <Button
                x:Name="butFicheClient"
                Height="50"
                Margin="10"
                Click="butFicheClient_Click"
                Content="👤 Fiche client"
                FontSize="16" />
            <Button
                Height="50"
                Margin="10"
                Content="🔧 Réparation"
                FontSize="16" />
        </StackPanel>

        <!--  Zone centrale  -->
        <StackPanel x:Name="SPcentral" Margin="226,108,20,20">
            <local:Bienvenue />

        </StackPanel>
    </Grid>
</Window>
