<Window
    x:Class="SAE2._01_Loxam.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1280"
    Height="830"
    mc:Ignorable="d">
    <Grid>
        <!--  Bandeau rouge haut  -->
        <Grid
            Grid.Row="0"
            Margin="0,0,0,707"
            Background="Red">
            <Label
                Margin="10,20,0,0"
                VerticalAlignment="Top"
                Content="LOXAM"
                FontSize="36"
                FontWeight="Bold"
                Foreground="White" />
            <Menu Margin="261,49,271,0" Background="Red">
                <MenuItem
                    Width="140"
                    FontSize="22"
                    Foreground="White"
                    Header="LOCATION" />
                <MenuItem
                    Width="150"
                    FontSize="22"
                    Foreground="White"
                    Header="RESERVATION" />
                <MenuItem
                    Width="100"
                    FontSize="22"
                    Foreground="White"
                    Header="RETOUR" />
                <MenuItem
                    FontSize="22"
                    Foreground="White"
                    Header="MAINTENANCE" />
            </Menu>

            <!--  Chistophe login  -->
            <Label
                Margin="0,0,30,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontFamily="Segoe MDL2 Assets"
                Foreground="White">
                <Label.Content>
                    <TextBlock>
                        <Run FontFamily="Segoe UI" Text="Christophe Colin " />
                        <Run FontFamily="Segoe MDL2 Assets" Text="&#xE77B;" />
                    </TextBlock>
                </Label.Content>
            </Label>
        </Grid>

        <!--  Contenu principal  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Menu vertical  -->
            <StackPanel
                Grid.Column="0"
                Margin="0,108,0,0"
                Background="#F0F0F0">
                <Button
                    Margin="10"
                    HorizontalAlignment="Left"
                    Content="🔍 Recherche matériel" />
                <Button
                    Margin="10"
                    HorizontalAlignment="Left"
                    Content="👤 Créer fiche client" />
                <Button
                    Margin="10"
                    HorizontalAlignment="Left"
                    Content="📥 Enregistrer retour" />
                <Button
                    Margin="10"
                    HorizontalAlignment="Left"
                    Content="🔧 Réparation" />
            </StackPanel>

            <!--  Zone centrale  -->
            <StackPanel Grid.Column="1" Margin="20,108,20,20">
                <TextBlock
                    Margin="0,10"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="Rechercher du matériel" />

                <!-- <UserControls:UCFicheClients Margin="30,0,30,0" /> -->

            </StackPanel>
        </Grid>
    </Grid>
</Window>
