<UserControl
    x:Class="SAE2._01_Loxam.FicheClients.UserControls.UCReservationMateriel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Loxam.FicheClients.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="686"
    d:DesignWidth="1040"
    mc:Ignorable="d">
    <StackPanel>

        <!--  Titre + bouton retour  -->
        <StackPanel
            Margin="0,0,0,20"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
                Width="50"
                Height="50"
                Margin="0,0,10,0"
                Content="⬅"
                FontSize="20" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="22"
                FontWeight="Bold"
                Text="Réserver un matériel" />
        </StackPanel>

        <Border
            Padding="20"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="10">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <!--  Partie gauche  -->
                <StackPanel Grid.Column="0" Margin="10">

                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="{Binding Materiel}" />

                    <Border
                        Margin="0,0,0,10"
                        Padding="5"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="10">
                        <Image
                            Height="250"
                            Source="{Binding ImageMateriel}"
                            Stretch="Uniform" />
                    </Border>

                    <TextBlock>
                        <Run FontSize="16" Text="Réf. " />
                        <Run
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="Red"
                            Text="{Binding Reference}" />
                    </TextBlock>

                    <TextBlock
                        Margin="0,5,0,0"
                        FontSize="16"
                        Text="Tarif : {Binding Tarif}/jour" />

                    <Border
                        Margin="0,20,0,0"
                        Padding="10"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                FontSize="20"
                                FontWeight="Bold"
                                Text="Total estimé : " />
                            <TextBlock
                                Margin="10,0,0,0"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="Red"
                                Text="{Binding TotalEstime}" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!--  Partie droite  -->
                <StackPanel Grid.Column="1" Margin="20">

                    <Button
                        Margin="0,0,0,10"
                        HorizontalAlignment="Right"
                        Content="Supprimer la réservation" />

                    <Border
                        Margin="0,0,0,10"
                        Padding="10"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="10">
                        <StackPanel>
                            <TextBlock FontSize="16" Text="Date début : {Binding DateDebut}" />
                            <TextBlock
                                Margin="0,5,0,0"
                                FontSize="16"
                                Text="Date fin : {Binding DateFin}" />
                            <TextBlock
                                Margin="0,10,0,0"
                                FontSize="16"
                                Text="Durée : {Binding Duree} jours" />
                        </StackPanel>
                    </Border>

                    <Border
                        Padding="10"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="10">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="16"
                                FontWeight="Bold"
                                Text="Options :" />

                            <CheckBox
                                Margin="0,5"
                                Content="Assurance dégâts"
                                FontSize="14"
                                IsChecked="{Binding AssuranceDegats}" />
                            <CheckBox
                                Margin="0,5"
                                Content="Livraison sur site"
                                FontSize="14"
                                IsChecked="{Binding LivraisonSite}" />
                            <CheckBox
                                Margin="0,5"
                                Content="Réservation anticipée"
                                FontSize="14"
                                IsChecked="{Binding ReservationAnticipee}" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Bouton final réserver  -->
        <Button
            Width="300"
            Height="60"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Background="Red"
            Content="RÉSERVER LE MATÉRIEL"
            FontSize="16"
            FontWeight="Bold"
            Foreground="White" />
    </StackPanel>
</UserControl>
