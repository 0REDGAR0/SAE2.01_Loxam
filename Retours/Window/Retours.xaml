<Window
    x:Class="SAE2._01_Loxam.Retours"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="LOXAM - Retours"
    Width="1400"
    Height="900"
    Background="White">

    <Grid>

        <!--  Bandeau rouge en haut  -->
        <Grid
            Height="100"
            VerticalAlignment="Top"
            Background="Red">
            <Label
                Margin="20,20,0,0"
                HorizontalAlignment="Left"
                Content="LOXAM"
                FontSize="36"
                FontWeight="Bold"
                Foreground="White" />

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="40,0"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="RETOUR" />
                <TextBlock
                    Margin="40,0"
                    FontSize="22"
                    Foreground="White"
                    Text="RESERVATION" />
            </StackPanel>

            <StackPanel
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="White"
                    Text="Christophe Colin " />
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Foreground="White"
                    Text="&#xE77B;" />
            </StackPanel>
        </Grid>

        <!--  Menu vertical gauche  -->
        <StackPanel
            Width="200"
            Margin="0,100,0,0"
            HorizontalAlignment="Left"
            Background="#F0F0F0">
            <Button
                Height="50"
                Margin="10"
                Content="🔍 Recherche matériel"
                FontSize="16" />
            <Button
                Height="50"
                Margin="10"
                Content="👤 Fiche client"
                FontSize="16" />
            <Button
                Height="50"
                Margin="10"
                Content="🔧 Réparation"
                FontSize="16" />
        </StackPanel>

        <!--  Contenu principal  -->
        <StackPanel Margin="220,120,20,20">

            <!--  Titre  -->
            <TextBlock
                Margin="0,0,0,20"
                FontSize="22"
                FontWeight="Bold"
                Text="Effectuer un retour" />

            <!--  Bloc Indisponibilités  -->
            <Border
                Padding="20"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="10">

                <StackPanel>

                    <StackPanel
                        Margin="0,0,0,10"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            x:Name="btn_effectuer_retour"
                            Width="194"
                            Height="40"
                            Background="Red"
                            Click="btn_effectuer_retour_Click"
                            Content="EFFECTUER UN RETOUR"
                            FontWeight="Bold"
                            Foreground="White" />
                        <Button
                            x:Name="btn_rechercher"
                            Width="150"
                            Height="40"
                            Margin="90,0,0,0"
                            Background="Red"
                            Content="RECHERCHER"
                            FontWeight="Bold"
                            Foreground="White" />
                    </StackPanel>

                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Indisponibilités" />

                    <!--  DataGrid  -->
                    <DataGrid
                        x:Name="DataGridIndisponibilites"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        ColumnHeaderHeight="50"
                        FontSize="16"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding ListeIndisponibilites}"
                        MouseDoubleClick="DataGridIndisponibilites_MouseDoubleClick"
                        RowHeight="50">

                        <DataGrid.Columns>

                            <DataGridTextColumn
                                Width="200"
                                Binding="{Binding Materiel}"
                                Header="Matériel" />
                            <DataGridTextColumn
                                Width="150"
                                Binding="{Binding Lieu}"
                                Header="Lieu" />
                            <DataGridTextColumn
                                Width="150"
                                Binding="{Binding DateDebut}"
                                Header="Du" />
                            <DataGridTextColumn
                                Width="150"
                                Binding="{Binding DateFin}"
                                Header="Au" />

                            <!--  Etat  -->
                            <DataGridTemplateColumn Width="150" Header="État">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border
                                            Padding="5"
                                            Background="{Binding CouleurEtat}"
                                            CornerRadius="5">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontWeight="SemiBold"
                                                Text="{Binding Etat}" />
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!--  Voir détails  -->
                            <DataGridTemplateColumn Width="120" Header="">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            Width="100"
                                            Height="30"
                                            Margin="5"
                                            Command="{Binding CommandVoirDetails}"
                                            Content="👁 Voir détails" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!--  Faire un retour  -->
                            <DataGridTemplateColumn Width="150" Header="">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            Width="130"
                                            Height="30"
                                            Margin="5"
                                            Background="Red"
                                            Command="{Binding CommandFaireRetour}"
                                            Content="FAIRE UN RETOUR"
                                            Foreground="White" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
